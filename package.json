{
  "private": true,
  "version": "1.0.0",
  "name": "lex-server",
  "description": "Backend For Lex",
  "main": "src/main.ts",
  "repository": "git@github.com:lex-land/lex-server.git",
  "author": "briefguo <gyj9094@gmail.com>",
  "keywords": [
    "react",
    "nestjs",
    "nextjs",
    "typeorm",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "ts-node -r tsconfig-paths/register dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.2",
    "@nestjs/core": "^6.5.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.0.4",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.2",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.0.4",
    "body-parser": "^1.19.0",
    "cache-manager": "^2.10.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "crypto-js": "^3.1.9-1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.18.0",
    "md5": "^2.2.1",
    "mysql": "^2.17.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "^6.5.2",
    "typeorm": "^0.2.18",
    "universal-cookie": "^4.0.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.2",
    "@types/body-parser": "^1.17.0",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "4.16.1",
    "@types/express-rate-limit": "^3.3.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.3",
    "@types/supertest": "2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "1.18.11",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "google",
      "prettier/@typescript-eslint",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ],
      "no-invalid-this": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "spaced-comment": "off",
      "camelcase": "off",
      "require-jsdoc": "off",
      "valid-jsdoc": "warn",
      "new-cap": "off"
    },
    "settings": {}
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint"
      ]
    },
    "ignore": [
      "node_modules",
      "**.d.ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
